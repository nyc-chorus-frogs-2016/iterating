<link rel="stylesheet" href="/css/application.css">
<link rel="stylesheet" href="/css/normalize.css">

<h1> <%= @deck.name %> </h1>
<h3> There are <%= @deck.cards.count %> cards </h3>
<h4> More info: <%= @deck.description %> </h4>

<% if logged_in? %>
<a href="/rounds/<%=@new_round%>/cards/<%=@random_card.id%>">Start Game</a>
<% else %>
<a href="/users/new">You aren't logged in. Click here to sign up!</a>
<% end %>
